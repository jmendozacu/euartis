<?php $_product = Mage::registry('current_product') ?>
<meta property="fb:app_id" content="<?php echo $_facebookId ?>" />
<meta property="og:title" content="<?php echo ($_product ? $this->helper('catalog/output')->productAttribute($_product, $_product->getName(), 'name') : '') ?>" />
<meta property="og:url" content="<?php echo $this->helper('core/url')->getCurrentUrl() ?>" />
<meta property="og:type" content="product" />
<meta property="og:image" content="<?php echo ($_product ? $this->helper('catalog/image')->init($_product, 'image') : '') ?>" />
<?php endif ?>