<?php if ($_products = $this->getRecentlyViewedProducts()): ?>
<div class="box-holder">
    <div class="ttl-area">
        <h2><?php echo $this->__('Recently Viewed') ?></h2>
    </div>
    <div class="block-content">
        <ul class="img-list">
        <?php $i=0;  foreach ($_products as $_item): ?>
            <li>
                <a href="<?php echo $this->getProductUrl($_item) ?>">
                <img src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(60) ?>" width="60" height="60" alt="<?php echo $this->htmlEscape($_item->getName()) ?>" />
                </a>
            </li>
			<?php if (++$i%4==0): ?></ul><ul class="img-list"><?php endif;?>
        <?php endforeach; ?>
        </ul>
        <script type="text/javascript">decorateList('recently-viewed-items');</script>
    </div>
</div>
<?php endif; ?>