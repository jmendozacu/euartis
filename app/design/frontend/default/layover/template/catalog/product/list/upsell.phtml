<?php if(count($this->getItemCollection()->getItems())): ?>
<div class="box-holder">
	<div class="ttl-area">
		<h2><?php echo $this->__('You may also like') ?></h2>
	</div>
	<ul class="img-list">
    <?php $this->resetItemsIterator() ?>
        <?php foreach($this->getItems() as $_link): ?>
		<li><a href="<?php echo $_link->getProductUrl() ?>"><img src="<?php echo $this->helper('catalog/image')->init($_link, 'small_image')->resize(60) ?>" width="60" height="60" alt="<?php echo $this->htmlEscape($_link->getName()) ?>" /></a></li>
        <?php endforeach;?>
	</ul>
</div>
<?php endif ?>
