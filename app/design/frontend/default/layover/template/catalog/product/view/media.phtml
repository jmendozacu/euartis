/**
 * Product media data template
 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
?>
<?php if ($_product->getImage() != 'no_selection' && $_product->getImage()): ?>
<div class="product-box">
<?php if (count($this->getGalleryImages()) > 0): ?>
    <ul class="img-list">
    	<?php foreach ($this->getGalleryImages() as $_image): ?>
            <li><a href="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile());?>" class="fancybox" rel="product-images"><img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(60); ?>" alt="" width="60" height="60" /><span class="mask">&nbsp;</span></a></li>
        <?php endforeach; ?>
    </ul>
<?php endif; ?>
    <div class="img-box">
    	<a href="<?php echo $this->helper('catalog/image')->init($_product, 'image') ?>" class="fancybox"><img src="<?php echo $this->helper('catalog/image')->init($_product, 'image')->resize(300) ?>" alt="" width="300" height="300" alt="<?php print $this->htmlEscape($this->getImageLabel()) ?>" /></a>
    </div>
</div>
<?php endif;?>
