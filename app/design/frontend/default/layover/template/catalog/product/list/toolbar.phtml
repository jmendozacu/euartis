<?php if($this->getCollection()->getSize()): ?>
<div class="ttl-area2">
	<form action="#" class="filters-form">
		<fieldset>
			<div class="cell">
				<label for="view-as"><?php echo $this->__('View as') ?></label>
				<select id="view-as" class="select2" onchange="setLocation(this.value)">
                    <?php foreach ($this->getModes() as $_code=>$_label): ?>
                        <option<?php if($this->isModeActive($_code)) print ' selected="selected"' ?> value="<?php echo $this->getModeUrl($_code) ?>"><?php echo $_label ?></option>
                    <?php endforeach; ?>
				</select>
			</div>
			<div class="cell">
			    <label><?php echo $this->__('Sort By') ?></label>
                <select onchange="setLocation(this.value)" id="sort-by" class="select2">
                <?php foreach($this->getAvailableOrders() as $_key=>$_order): ?>
                    <option value="<?php echo $this->getOrderUrl($_key, 'asc') ?>"<?php if($this->isOrderCurrent($_key)): ?> selected="selected"<?php endif; ?>>
                        <?php echo $_order ?>
                    </option>
                <?php endforeach; ?>
                </select>
			</div>
			<div class="cell">
				<label><?php echo $this->__('Show') ?></label>
                <select id="whow" class="select3" onchange="setLocation(this.value)">
                <?php foreach ($this->getAvailableLimit() as  $_key=>$_limit): ?>
                    <option value="<?php echo $this->getLimitUrl($_key) ?>"<?php if($this->isLimitCurrent($_key)): ?> selected="selected"<?php endif ?>>
                        <?php echo $_limit ?><?php echo $this->__(' per page') ?>
                    </option>
                <?php endforeach; ?>
                </select> 
			</div>
		</fieldset>
	</form>

        <?php echo $this->getPagerHtml() ?>

</div>
<?php endif ?>
