/**
 * Shoping cart sidebar
 *
 * @see Mage_Checkout_Block_Cart_Sidebar
 */

?>
<?php if ($this->getIsNeedToDisplaySideBar()):?>
<?php $_cartQty = $this->getSummaryCount() ?>
<li>
    <a href="<?php echo $this->getUrl('checkout/cart') ?>" class="my-cart"><?php echo $this->__('My Cart') ?> (<?php print (!empty($_cartQty)) ? $_cartQty : '0' ;?>)<span class="arrow">&nbsp;</span></a>
    <?php $_items = $this->getRecentItems() ?>
	<div class="drop-cart">
		<div class="drop-cart-holder">
        <?php if(count($_items)): ?>
			<ul>
                <?php foreach($_items as $_item): ?>
                    <?php echo $this->getItemHtml($_item) ?>
                <?php endforeach; ?>
			</ul>
			<div class="holder">
				<a href="<?php echo $this->getCheckoutUrl() ?>" class="btn-proceed"><?php echo $this->__('Proceed to checkout') ?></a>
			</div>
         <?php else: ?>
         <ul><li><p><?php echo $this->__('You have no items in your shopping cart.') ?></p></li></ul>
         <?php endif ?>
		</div>
	</div>
</li>
<?php endif;?>
