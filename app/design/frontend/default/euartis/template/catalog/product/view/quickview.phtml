    $_product = $this->getProduct();
?>
<div class="product-box">
	<?php if (count($this->getGalleryImages()) > 0): $counter = 1 ?>
    <ul class="img-list">
        <?php foreach ($this->getGalleryImages() as $_image): if ($counter++ < 4): ?>
