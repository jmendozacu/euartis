        <?php endif; endforeach; ?>
    </ul>
    <?php endif; ?>
    
	<div class="img-box">
    	<img id="quickview" src="<?php echo $this->helper('catalog/image')->init($_product, 'image')->resize(220) ?>" width="220" height="220" alt="<?php echo $this->htmlEscape($this->getImageLabel()) ?>" />
